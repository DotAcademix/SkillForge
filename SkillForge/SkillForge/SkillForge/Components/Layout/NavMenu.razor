@implements IDisposable

@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">DotAcademix</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="index">
                        <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <button class="nav-link dropdown-btn" @onclick="ToggleCourses">
                        <span class="bi bi-book-half-nav-menu" aria-hidden="true"></span> Courses
                    </button>
                    @if (showCourses)
                    {
                        <div class="sub-menu">
                            <NavLink class="nav-link" href="art">Art</NavLink>
                            <NavLink class="nav-link" href="en">English</NavLink>
                            <NavLink class="nav-link" href="mth">Mathematics</NavLink>
                            <NavLink class="nav-link" href="prg">Programming</NavLink>
                        </div>
                    }
                </div>@* 

                <div class="nav-item px-3">
                    <button class="nav-link dropdown-btn" @onclick="ToggleMyCourses">
                        <span class="bi bi-folder-fill-nav-menu" aria-hidden="true"></span> My Courses
                    </button>
                    @if (showMyCourses)
                    {
                        <div class="sub-menu">
                            <NavLink class="nav-link" href="#">Create</NavLink>
                            <NavLink class="nav-link" href="#">View</NavLink>
                            <NavLink class="nav-link" href="#">Content</NavLink>
                        </div>
                    }
                </div> *@

                @* <div class="nav-item px-3">
                    <NavLink class="nav-link" href="calendar">
                        <span class="bi bi-calendar-event-fill-nav-menu" aria-hidden="true"></span> Calendar
                    </NavLink>
                </div> *@
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="profile">
                        <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> Account
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <form action="Account/Logout" method="post">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                        <button type="submit" class="nav-link">
                            <span class="bi bi-arrow-bar-left-nav-menu" aria-hidden="true"></span> Logout
                        </button>
                    </form>
                </div>
            </Authorized>
            <NotAuthorized>
                <NavLink href="Sign-Up"></NavLink>
                <NavLink href="Sign-In"></NavLink>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private bool showCourses = false;
    private bool showMyCourses = false;
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    private void ToggleCourses()
    {
        showCourses = !showCourses;
    }

    // private void ToggleMyCourses()
    // {
    //     showMyCourses = !showMyCourses;
    // }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}